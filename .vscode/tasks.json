{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "rust: cargo build",
            "type": "cargo",
            "command": "build",
            "args": [
                "--features", "forked-godot"
            ],
            "options": {
                "cwd": "${workspaceFolder}/rust"
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "showReuseMessage": false,
                "clear": true
            },
            "group": "build"
        }
    ]
}